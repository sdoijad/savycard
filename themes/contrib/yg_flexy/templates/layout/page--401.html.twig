<header id="header" class="site-header header-style-1">
  <div class="topbar">
    <div class="container">
        <div class="row">
            <div class="col-xs-6 col-sm-9 col-md-9 col-lg-9">
                <div class="contact-info">
                    <ul>
                        {% if company_phone_no %}
                        <li><a href="tel:{{company_phone_no}}"><i class="fa fa-phone" aria-hidden="true"></i>{{company_phone_no}}</a></li>
                    {% endif %} 
                    {% if company_email %}
                          <li><a href="mailto:{{company_email}}"><i class="fa fa-envelope" aria-hidden="true"></i>{{company_email}}</a></li>
                      {% endif %}
                    </ul>
                </div>
            </div>
            <div class="col-xs-6 col-sm-3 col-md-3 col-lg-3">
                <div class="social-links">
                    <ul>
                      {% if facebook %}
                          <li><a href="{{facebook}}"><i class="fa fa-facebook" aria-hidden="true"></i></a></li>
                      {% endif %}
                      {% if twitter %}
                          <li><a href="{{twitter}}"><i class="fa fa-twitter" aria-hidden="true"></i></a></li>
                        {% endif %}
                        {% if linkedin %}
                          <li><a href="{{linkedin}}"><i class="fa fa-linkedin" aria-hidden="true"></i></a></li>
                        {% endif %}
                        {% if pinterest %}
                            <li><a href="{{pinterest}}"><i class="fa fa-pinterest" aria-hidden="true"></i></a></li>
                        {% endif %}
                        {% if dribbble %}
                          <li><a href="{{dribbble}}"><i class="fa fa-dribbble" aria-hidden="true"></i></a></li>
                      {% endif %}
                    </ul>
                </div>
            </div>
        </div>
    </div> <!-- end container -->
  </div> <!-- end topbar -->

    <nav class="navbar navbar-expand-lg navbar-white site-navigation navbar-togglable">
     <div class="container">
